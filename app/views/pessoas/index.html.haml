- model_class = Pessoa
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nome)
      %th= model_class.human_attribute_name(:senha)
      %th= model_class.human_attribute_name(:is_monitor)
      %th= model_class.human_attribute_name(:is_admin)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:escola_id)
      %th= model_class.human_attribute_name(:avatar_file_name)
      %th= model_class.human_attribute_name(:avatar_content_type)
      %th= model_class.human_attribute_name(:avatar_file_size)
      %th= model_class.human_attribute_name(:avatar_updated_at)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @pessoas.each do |pessoa|
      %tr
        %td= link_to pessoa.id, pessoa_path(pessoa)
        %td= pessoa.nome
        %td= pessoa.senha
        %td= pessoa.is_monitor
        %td= pessoa.is_admin
        %td= pessoa.email
        %td= pessoa.escola_id
        %td= pessoa.avatar_file_name
        %td= pessoa.avatar_content_type
        %td= pessoa.avatar_file_size
        %td= pessoa.avatar_updated_at
        %td=l pessoa.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_pessoa_path(pessoa), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), pessoa_path(pessoa), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_pessoa_path, :class => 'btn btn-primary'
