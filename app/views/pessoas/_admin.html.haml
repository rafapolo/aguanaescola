- if @monitores_count > 0
  %table.table.table-striped
    %thead
      %tr
        %th Nome
        %th Email
        %th Escolas
        %th Senha
        %th Desde
        %th
    %tbody
      - @monitores.each do |m|
        %tr
          %td= link_to m.nome, m
          %td= m.email
          %td= m.escolas.map{|e| e.nome}.join(', ')
          %td= m.senha
          %td= formata_data m.created_at
          %td{:style=>"width:85px"}
            %a{:href=>edit_pessoa_path(m), :class => 'btn btn-primary'} 
              %i.icon-edit

            = link_to '<i class="icon-trash"></i>'.html_safe, pessoa_path(m), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Quer mesmo excluir a Pessoa e todos seus dados?')) }, :class => 'btn btn-danger'
    %br
 
= link_to 'Novo', new_pessoa_path, :class => 'btn btn-primary'