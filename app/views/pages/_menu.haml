.navbar{:style=>"margin-left: 150px; width: 755px"}
  .navbar-inner
    %ul.nav
      %li
        %a{:href => "/"} 
          %i.icon-home
          Novidades
      %ul.nav
        // escolas
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %i.icon-book
            Escolas
            %b.caret
          %ul.dropdown-menu
            - Escola.all.each do |e|
              %li
                %a{:href => "#{url_for e}"} 
                  %i.icon-book
                  = "#{e.nome} - #{e.municipio}"

          // coletas
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %i.icon-list
            Coletas
            %b.caret
          %ul.dropdown-menu
            - Coleta.all.each do |c|
              %li
                %a{:href => "#{url_for c}"} 
                  %i.icon-list
                  = "#{c.local} - #{c.escola.nome}"
    %ul.nav.pull-right
      %form.navbar-search{:action=>"/busca"}
        %input.search-query{:placeholder => "Pesquisar", :name=>"q", :type => "text", :style=>"width: 180px"}
        %input#search-submit{:type => "submit", :value => "Search"}
      - unless current_user
        %li.divider-vertical        
        %li
          %a{:href => "/sobre"} 
            %i.icon-question-sign
            Sobre        
      %li.divider-vertical              
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.icon-user
              = current_user.nome
              %b.caret
            %ul.dropdown-menu
              %li
                %a{:href => "#{url_for current_user}"} 
                  %i.icon-user
                  Meu Perfil              
              - if current_user.is_admin? || current_user.is_monitor?
                %li.divider
                %li
                  %a{:href => "/admin"} 
                    %i.icon-lock
                    Administrar
              - else
                %li
                  %a{:href => "#{url_for current_user.escola}"} 
                    %i.icon-book
                    Minha Escola

              %li.divider
              %li
                %a{:href => "/logout"} 
                  %i.icon-off
                  Sair
        - else
          %li
            %a{:href => "/login"} 
              %i.icon-lock
              Acessar