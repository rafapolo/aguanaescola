= form_for @midium, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :titulo, :class => 'control-label'
    .controls
      = f.text_field :titulo, :class => 'text_field'
  .control-group
    = f.label :conteudo, :class => 'control-label'
    .controls
      = f.text_area :conteudo, :class => 'text_area'
  .control-group
    = f.label :mediable_id, :class => 'control-label'
    .controls
      = f.number_field :mediable_id, :class => 'number_field'
  .control-group
    = f.label :mediable_type, :class => 'control-label'
    .controls
      = f.text_field :mediable_type, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), midium_path, :class => 'btn'
