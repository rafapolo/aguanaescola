- model_class = Midium
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:titulo) + ':'
  %br
  = @midium.titulo
%p
  %strong= model_class.human_attribute_name(:conteudo) + ':'
  %br
  = @midium.conteudo
%p
  %strong= model_class.human_attribute_name(:mediable_id) + ':'
  %br
  = @midium.mediable_id
%p
  %strong= model_class.human_attribute_name(:mediable_type) + ':'
  %br
  = @midium.mediable_type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), midium_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_midium_path(@midium), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), midium_path(@midium), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
