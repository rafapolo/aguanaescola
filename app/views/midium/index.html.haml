- model_class = Midium
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:titulo)
      %th= model_class.human_attribute_name(:conteudo)
      %th= model_class.human_attribute_name(:mediable_id)
      %th= model_class.human_attribute_name(:mediable_type)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @midia.each do |midium|
      %tr
        %td= link_to midium.id, midium_path(midium)
        %td= midium.titulo
        %td= midium.conteudo
        %td= midium.mediable_id
        %td= midium.mediable_type
        %td=l midium.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_midium_path(midium), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), midium_path(midium), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_midium_path, :class => 'btn btn-primary'
