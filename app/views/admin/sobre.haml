= form_for @sobre do |f|

  - unless @sobre.errors.empty?
    .alert.alert-error
      %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
      - @sobre.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.text_area :texto, :class=>'wysihtml5', :style=>"width: 540px; height: 300px"

  .control-group
    %p Imagem de Parceiros (750px de largura)
    .controls
      = image_tag @sobre.parceiros :thumb if @sobre.parceiros.path
      = f.file_field :parceiros, :class => 'text_field' 

  .control-group
    %p Imagem de Executores (750px de largura)
    .controls
      = image_tag @sobre.execucao :thumb if @sobre.execucao.path      
      = f.file_field :execucao, :class => 'text_field' 

  .actions
    = f.submit 'Salvar', :class=>"btn btn-primary"      

:javascript
  $(document).ready(function(){
    $('#sobre_texto').wysihtml5({"image": false});
  });    