- model_class = Coletum
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:data) + ':'
  %br
  = @coleta.data
%p
  %strong= model_class.human_attribute_name(:info) + ':'
  %br
  = @coleta.info
%p
  %strong= model_class.human_attribute_name(:escola_id) + ':'
  %br
  = @coleta.escola_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), coletas_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_coleta_path(@coleta), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), coleta_path(@coleta), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
