= form_for @coleta, :html => { :class => 'form-horizontal' } do |f|

  .control-group
    = f.label :local, :class => 'control-label'
    .controls
      = f.text_area :local, :class => 'text_field'

  .control-group
    = f.label :local, :class => 'control-label'
    .controls
      = f.number_field :local, :class => 'number_field'

  .control-group
    = f.label :algas, :class => 'control-label'
    .controls
      = f.check_box :algas, :class => 'checkbox'

  .control-group
    = f.label :info, :class => 'control-label'
    .controls
      = f.text_area :info, :class => 'text_area'

  .form-actions
    = f.hidden_field :escola_id, :value => current_user.escola.id
    = f.submit "Salvar", :class => 'btn btn-primary'    
