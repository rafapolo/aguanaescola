= form_for @coleta, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :data, :class => 'control-label'
    .controls
      = f.date_select :data, :class => 'date_select'
  .control-group
    = f.label :info, :class => 'control-label'
    .controls
      = f.text_area :info, :class => 'text_area'
  .control-group
    = f.label :escola_id, :class => 'control-label'
    .controls
      = f.number_field :escola_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), coletas_path, :class => 'btn'
