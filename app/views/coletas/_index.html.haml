- model_class = Coletum
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:data)
      %th= model_class.human_attribute_name(:info)
      %th= model_class.human_attribute_name(:escola_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody    
    - @coleta.each do |coleta|
      %tr
        %td= link_to coleta.id, coleta_path(coleta)
        %td= coleta.data
        %td= coleta.info
        %td= coleta.escola_id
        %td=l coleta.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_coleta_path(coleta), :class => 'btn btn-mini'
          = button_to t('.destroy', :default => t("helpers.links.destroy")), coleta_path(coleta), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_coleta_path, :class => 'btn btn-primary'
